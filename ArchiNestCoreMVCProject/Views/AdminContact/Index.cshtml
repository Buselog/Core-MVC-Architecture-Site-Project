@model List<ArchiNestCoreMVCProject.Entities.Contact>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Contact List</h4>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>Name</th>
							<th>Email</th>
							<th>Subject</th>
							<th>Message</th>
							<th>Operations</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ContactId</td>
								<td>@item.Name</td>
								<td>@item.Email</td>
								<td>@item.Subject</td>
								<td>
									<textarea style="width: 150px; height: 75px;" readonly>@item.Message</textarea>
								</td>
								<td>
									<a type="button" class="btn btn-inverse-danger btn-fw" href="/AdminContact/Delete/@item.ContactId">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

