@model List<ArchiNestCoreMVCProject.Entities.Field>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Field</h4>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>FieldName</th>
							<th>Operations</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.FieldId</td>
								<td>@item.FieldName</td>
								<td>
									<a type="button" class="btn btn-inverse-primary btn-fw" href="/AdminField/Update/@item.FieldId">Update</a>
									&nbsp;
									<a type="button" class="btn btn-inverse-danger btn-fw" href="/AdminField/Delete/@item.FieldId">Delete</a>
								</td>
							</tr>
						}

					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

