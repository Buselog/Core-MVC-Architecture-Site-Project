@model ArchiNestCoreMVCProject.Entities.About
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">About</h4>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>Title</th>
							<th>Description</th>
							<th>Subdescription</th>
							<th>Image URL</th>
							<th>Video URL</th>
							<th>Operations</th>
						</tr>
					</thead>
					<tbody>

						<tr>
							<td>@Model.AboutId</td>
							<td>@Model.Title</td>
							<td>@Model.Description1.Substring(0, 20)...</td>
							<td>@Model.Description2.Substring(0, 20)...</td>
							<td align="center"><img src="@Model.ImageUrl" style="height:61px; width:69px;" /></td>
							<td><a href="@Model.VideoUrl"> <i class="mdi mdi-play" style="width: 40px;"></i></a></td>
							<td>
								<a type="button" class="btn btn-inverse-primary btn-fw" href="/AdminAbout/Update/@Model.AboutId">Update</a>
								&nbsp;
								<a type="button" class="btn btn-inverse-danger btn-fw" href="/AdminAbout/Delete/@Model.AboutId">Delete</a>
							</td>
						</tr>


					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
