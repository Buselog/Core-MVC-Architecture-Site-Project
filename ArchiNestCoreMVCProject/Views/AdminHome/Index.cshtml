@model List<ArchiNestCoreMVCProject.Entities.Home>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Home</h4>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>Title</th>
							<th>Subtitle</th>
							<th>Operations</th>
						</tr>
					</thead>
					<tbody>

						@foreach (var item in Model)
						{
							<tr>
								<td>@item.HomeId</td>
								<td>@item.Title</td>
								<td>@item.Subtitle.Substring(0,50)...</td>
								<td>
									<a type="button" class="btn btn-inverse-primary btn-fw" href="/AdminHome/Update/@item.HomeId">Update</a>
									&nbsp;
									<a type="button" class="btn btn-inverse-danger btn-fw" href="/AdminHome/Delete/@item.HomeId">Delete</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

