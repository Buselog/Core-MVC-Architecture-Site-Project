@model List<ArchiNestCoreMVCProject.Entities.Services>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Services</h4>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>#</th>
							<th>Title</th>
							<th>Description</th>
							<th>Image URL</th>
							<th>Operations</th>
						</tr>
					</thead>
					<tbody>
						@foreach(var item in Model){
							<tr>
								<td>@item.ServicesId</td>
								<td>@item.Title</td>
								<td>@item.Description.Substring(0, 20)...</td>
								<td align="center"><img src="@item.ImageUrl" style="height:61px; width:69px;" /></td>
								<td>
									<a type="button" class="btn btn-inverse-primary btn-fw" href="/AdminService/Update/@item.ServicesId">Update</a>
									&nbsp;
									<a type="button" class="btn btn-inverse-danger btn-fw" href="/AdminService/Delete/@item.ServicesId">Delete</a>
								</td>
							</tr>
						}
						
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

